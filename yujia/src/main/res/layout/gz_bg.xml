<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/bgbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#b38ed3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="本宫"
            android:textColor="@color/white"
            android:textSize="18sp" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/sign"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/zxing"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"/>
        <ImageView
            android:id="@+id/hy_xx"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@mipmap/msg"/>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/gzbg_srfl">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gainsboro"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="144dp"
                        android:gravity="center"
                        android:background="@drawable/bg_bg">

                        <RelativeLayout
                            android:id="@+id/relativeLayout1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true">

                            <com.facebook.drawee.view.SimpleDraweeView
                                android:id="@+id/guanzhu_pic"
                                android:layout_width="72dp"
                                android:layout_height="72dp"
                                android:layout_marginLeft="32dp"
                                app:actualImageScaleType="centerCrop"
                                app:failureImage="@drawable/touxiang"
                                app:failureImageScaleType="centerCrop"
                                app:placeholderImage="@drawable/touxiang"
                                app:placeholderImageScaleType="centerCrop"
                                app:roundAsCircle="true"/>

                            <TextView
                                android:id="@+id/guanzhu_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="24dp"
                                android:layout_toRightOf="@+id/guanzhu_pic"
                                android:text="瑜伽"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/guanzhu_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/guanzhu_name"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_toRightOf="@+id/guanzhu_pic"
                                android:text="馆员"
                                android:textSize="14sp" />
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/edit_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/relativeLayout1"
                            android:layout_marginRight="16dp"
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal"
                            android:paddingTop="8dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/bianji"
                                android:scaleType="centerCrop"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="编辑个人信息"
                                android:layout_marginLeft="16dp"
                                android:textColor="#b38ed3" />
                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/layout_keshi"
                            android:layout_width="0dp"
                            android:layout_height="72dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/keshi_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="完成课时"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center"
                            android:background="@color/gainsboro" />

                        <LinearLayout
                            android:id="@+id/layout_jifen"
                            android:layout_width="0dp"
                            android:layout_height="72dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/jifen_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="积分"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/layout_yuyue"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@color/white"
                            android:paddingLeft="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="代客预约"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="16dp"
                                android:src="@mipmap/arrow_right" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layout_kecheng"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/white"
                            android:paddingLeft="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="我的课程"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="16dp"
                                android:src="@mipmap/arrow_right" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layout_setting"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/white"
                            android:paddingLeft="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="设置"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="16dp"
                                android:src="@mipmap/arrow_right" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layout_fankui"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/white"
                            android:paddingLeft="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="意见反馈"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="16dp"
                                android:src="@mipmap/arrow_right" />
                        </RelativeLayout>
                    </LinearLayout>

                    <include layout="@layout/loadzxing"/>

                </LinearLayout>
            </ScrollView>
        </android.support.v4.widget.SwipeRefreshLayout>
        <ProgressBar
            android:layout_width="50dp"
            android:layout_height="50dp"
            style="?android:attr/progressBarStyleSmall"
            android:indeterminateDrawable="@drawable/progressbar"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="50dp"
            android:id="@+id/progress"
            android:visibility="invisible"/>
    </FrameLayout>
</LinearLayout>
