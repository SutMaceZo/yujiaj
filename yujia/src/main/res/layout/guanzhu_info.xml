<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/titlebar_color"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/titlebar_color">

        <ImageView
            android:id="@+id/bt_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
           android:src="@mipmap/rt"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="场馆"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/back11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:text="确定"
            android:textColor="@android:color/white" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gainsboro">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingLeft="16dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <TextView
                    android:id="@+id/cg_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="场馆名称:"
                    android:textSize="16sp" />

                <EditText

                    android:id="@+id/changuan_name_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:background="@null"
                    android:ellipsize="end"
                   android:layout_alignParentRight="true"
                    android:gravity="right|center_vertical"
                    android:paddingRight="4dp"
                    android:ems="10"
                    android:hint="请输入场馆名称"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:textCursorDrawable="@null" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingLeft="16dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                    android:text="场馆电话:"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/changguan_tel"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textSize="14sp"
                    android:layout_height="32dp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:paddingRight="4dp"
                    android:maxEms="16"
                    android:gravity="right|center_vertical"
                    android:hint="请输入场馆电话"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textCursorDrawable="@null"

                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey"
               android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>

            <RelativeLayout
                android:id="@+id/changguan_adress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:background="@color/white"
                android:paddingRight="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="场馆地址:"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/changguan_adress_privence"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:ellipsize="end"
                    android:maxEms="4"
                    android:gravity="center"
                    android:singleLine="true"
                    android:layout_toLeftOf="@+id/changguan_adress_city"
                    android:layout_marginRight="8dp"
                    android:text=""
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/changguan_adress_city"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:ellipsize="end"
                    android:gravity="center"
                   android:layout_toLeftOf="@+id/changguan_adress_xian"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:maxEms="4"
                    android:singleLine="true"
                    android:text="dsadadas"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/changguan_adress_xian"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:maxEms="4"
                    android:singleLine="true"
                    android:text="dsad"
                    android:textSize="14sp" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:layout_marginTop="8dp"
                android:paddingRight="16dp"
                >

                <EditText
                    android:id="@+id/changguan_street"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/text_bg"
                    android:gravity="top"
                    android:hint="请输入详细场馆地址"
                    android:paddingLeft="4dp"
                    android:textSize="14sp"
                    android:textCursorDrawable="@null"

                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
               android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:layout_marginBottom="24dp">

               <!-- <ImageView
                    android:id="@+id/add_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/add"
                    />-->

                <LinearLayout
                    android:id="@+id/add_img"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                   >
                   <ImageView
                       android:layout_width="24dp"
                       android:layout_height="24dp"
                       android:src="@mipmap/add2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="添加图片"
                        android:layout_marginLeft="4dp"
                        android:textSize="16sp" />
                </LinearLayout>

                <GridView
                    android:id="@+id/gridView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:horizontalSpacing="8dp"
                    android:verticalSpacing="8dp"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

        </LinearLayout>
        </ScrollView>

        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="50dp"
            android:indeterminateDrawable="@drawable/progressbar"
            android:visibility="invisible" />

    </FrameLayout>


</LinearLayout>
